<div class="row">
<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div class="row">
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'typeArea' %>
</div>
<div class="row">
    <%= f.submit "Add Poem!" %>
  <% end %>
</div>
